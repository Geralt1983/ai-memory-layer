# AI Memory Layer - Environment Configuration

# OpenAI API Configuration (Required)
OPENAI_API_KEY=your_openai_api_key_here

# Memory Storage Configuration
VECTOR_STORE_TYPE=faiss                    # Options: faiss, chroma
PERSIST_DIRECTORY=./data                   # Directory for persistent storage
MEMORY_PERSIST_PATH=./data/memories.json   # Path to memory JSON file

# FAISS Configuration
FAISS_INDEX_PATH=./data/faiss.index       # FAISS index file path
FAISS_METADATA_PATH=./data/faiss.pkl      # FAISS metadata pickle file

# Logging Configuration
LOG_LEVEL=INFO                             # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json                           # json or text
LOG_FILE=                                 # Optional log file name (console-only if not set)
LOG_DIR=./logs                            # Log directory

# API Configuration
API_HOST=0.0.0.0                          # API server host
API_PORT=8000                             # API server port
API_WORKERS=1                             # Number of uvicorn workers

# Memory Engine Configuration  
MIN_RELEVANCE_SCORE=0.4                   # Minimum similarity score threshold
DEFAULT_SEARCH_LIMIT=10                   # Default number of search results
MAX_MEMORY_AGE_DAYS=365                   # Maximum age of memories to keep

# GPT Response Configuration
GPT_MODEL=gpt-4                           # GPT model for response generation
MAX_CONTEXT_LENGTH=4000                   # Maximum context length for GPT
TEMPERATURE=0.7                           # GPT response temperature

# Cloudflare Tunnel (Optional)
TUNNEL_NAME=ai-memory-layer               # Cloudflare tunnel name
TUNNEL_DOMAIN=yourdomain.com              # Your domain for tunnel routing

# Development Configuration
DEBUG=false                               # Enable debug mode
RELOAD=false                             # Enable auto-reload for development